<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route method="GET" url="/V1/crud_operation/:id">
        <service class="SSJewels\Calculation\Api\CrudRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="POST" url="/V1/crud_operation">
        <service class="SSJewels\Calculation\Api\CrudRepositoryInterface" method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="DELETE" url="/V1/crud_operation/:id">
        <service class="SSJewels\Calculation\Api\CrudRepositoryInterface" method="delete"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

    <route method="POST" url="/V1/producPrice">
        <service class="SSJewels\Calculation\Api\CrudRepositoryInterface" method="getProductDetails"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>

</routes>
